<script>
    // Show more or less cards on button click
    const seeMoreBtn = document.getElementById('see-more-btn');
    const moreCardsContainer = document.getElementById('more-cards-container');

    seeMoreBtn.addEventListener('click', function () {
        if (moreCardsContainer.style.display === 'block') {
            moreCardsContainer.style.opacity = 0; // Fade out the cards
            setTimeout(function () {
                moreCardsContainer.style.display = 'none'; // Hide the cards after fade-out
            }, 500); // Match the fade-out transition duration
            seeMoreBtn.textContent = 'See More'; // Change button text to 'See More'
        } else {
            moreCardsContainer.style.display = 'block'; // Show the cards
            setTimeout(function () {
                moreCardsContainer.style.opacity = 1; // Fade in the cards
            }, 10); // Slight delay to trigger the transition
            seeMoreBtn.textContent = 'See Less'; // Change button text to 'See Less'

            // Scroll to the newly revealed content
            window.scrollTo({
                top: moreCardsContainer.offsetTop,
                behavior: 'smooth'
            });
        }
    });
</script>

